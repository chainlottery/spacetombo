{
  "name": "nft-lottery",
  "version": "1.0.0",
  "description": "NFT Lottery for the Chainlink Hackathon Fall 2021",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chainlottery/spacetombo.git"
  },
  "author": "SoxZz5 / KonyTech / Juicy7",
