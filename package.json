  "scripts": {
    "test": "hardhat test ./src/hardhat/test/unit/States_tests.ts ./src/hardhat/test/integration/OngoingParticipationPeriod_tests.ts",
    "start:node": "yarn hardhat node",
    "build:node": "yarn hardhat compile --force",
    "hook:install": "npx --no-install husky add .husky/commit-msg \"npx --no-install commitlint --edit $1\" && npx --no-install husky add .husky/post-merge \"yarn build:node\"",
    "husky:install": "npx --no-install rimraf .husky && npx husky install && npm run hook:install",
    "tsnode": "node --loader ts-node/esm --no-warnings",
    "test:shuffle": "yarn tsnode ./src/scripts/lottery-shuffle/Shuffle.ts",
    "build:ipfs": "yarn tsnode ./src/scripts/ipfs/0_pre_generate.ts && yarn tsnode ./src/scripts/ipfs/1_generate_car_images.ts && yarn tsnode ./src/scripts/ipfs/2_generate_car_metadata.ts && yarn tsnode ./src/scripts/ipfs/3_prepare_upload.ts"
  },
  "devDependencies": {
    "@appliedblockchain/chainlink-plugins-fund-link": "^0.0.3",
    "@chainlink/contracts": "^0.2.2",
    "@chainlink/token": "^1.1.0",
